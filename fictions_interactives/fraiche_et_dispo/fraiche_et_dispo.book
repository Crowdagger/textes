}

progress {
    width: 3em;
    background-color: #eee;
    color: green;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.25) inset; 
}

progress::-moz-progress-bar {
    background: green;
}

progress::-webkit-progress-value {
    background: green;
}
