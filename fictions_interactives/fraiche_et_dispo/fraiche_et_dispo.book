html.css.add: "#statut {
    position: fixed;
    top: 0;
    left: 0;
    text-align: center;
}

#statut table {
    background-color: #b571af;
    margin: auto;
    padding: 0;
    //width: 60%;
    border-style: solid;
    border-color: white;
    border-collapse: collapse;
}

#statut table th, #statut table td {
    border-left-style: solid;
    border-right-style: solid;
    text-align: center;
    font-variant: small-caps;
}

#statut table td {
    font-weight: bold;
    font-size: 150%;
}

#statut table td img {
    //border: solid;
}

